@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />

<h3>@Html.DisplayNameFor(model => model.StylistName): @ViewBag.thisStylist.StylistName<h3>
<p>@ViewBag.thisStylist.StylistPhone</p>
<p>@ViewBag.thisStylist.StylistEmail</p>
<p>@ViewBag.thisStylist.StylistBio</p>
<p>@ViewBag.thisStylist.HireDate</p>
<p>@ViewBag.thisStylist.Specialty</p>

<h2>Clients</h2>
<ol>
@foreach(Client client in ViewBag.clients)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
}
</ol>

<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = ViewBag.thisStylist.StylistId })</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = ViewBag.thisStylist.StylistId })</p>
<p>@Html.ActionLink("Back to stylist list", "Index")</p>